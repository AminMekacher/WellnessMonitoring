<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_fatigue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:padding="20dp">

        <TextView
            android:id="@+id/fatigue_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Your level of fatigue for the last questionnaires"
            android:textColor="@color/white_greyish"
            android:textSize="21sp"
            android:textStyle="bold" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/fatigue_graph"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_below="@id/fatigue_text"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/fatigue_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="10dp"
            android:text="@string/fatigue_help"
            android:textColor="@color/background_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_below="@id/fatigue_graph"
            android:drawableBottom="@drawable/question_icon" />

    </RelativeLayout>
</ScrollView>