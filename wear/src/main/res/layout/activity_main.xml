<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222" >

<FrameLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_box="all">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/start_workout"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/hrTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:text="@string/hr" />

    <TextView
        android:id="@+id/hrDisplay"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:textSize="23sp"
        android:layout_below="@+id/hrTextView"
        android:textColor="@color/white"
        android:layout_marginRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000.0" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:layout_below="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hrTextView"
        android:text="@string/time" />

    <TextView
        android:id="@+id/timeDisplay"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/hrDisplay"
        android:textSize="23sp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/hrTextView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00:00" />


</RelativeLayout>



    <ImageView
        android:id="@+id/image_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:src="@mipmap/workout_begin"
        android:scaleX="0.95"
        android:scaleY="0.95"/>

   ]

<Button
    android:id="@+id/startWorkoutButton"
    android:background="@drawable/button_start"
    android:layout_gravity="bottom|left"
    android:layout_height="55dp"
    android:layout_width="55dp"
    android:text="start" />

<Button
    android:id="@+id/stopWorkoutButton"
    android:background="@drawable/button_stop"
    android:layout_gravity="bottom|right"
    android:layout_height="55dp"
    android:layout_width="55dp"
    android:text="stop" />
</FrameLayout></android.support.wearable.view.BoxInsetLayout>